<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/data_measurement_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/data_measurement"
        android:text="Дата:"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="4dp"
        android:textStyle="bold"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/data_measurement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/data_measurement_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="23.02.2025"
        android:layout_marginStart="4dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/measurement_board_tittle"
        android:layout_width="0dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_measurement_title"
        app:layout_constraintEnd_toStartOf="@id/measurement_board"
        android:text="Значение на щите:"
        android:textSize="16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/measurement_board"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        android:text="3.57"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/image_dinamic"
        app:layout_constraintStart_toEndOf="@id/measurement_board_tittle"
        app:layout_constraintTop_toBottomOf="@id/data_measurement_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/measurement_testo_tittle"
        android:layout_width="0dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measurement_board_tittle"
        app:layout_constraintEnd_toStartOf="@id/measurement_testo"
        android:text="Измеренное:"
        android:textSize="16sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/measurement_testo"
        android:layout_width="0dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/measurement_testo_tittle"
        app:layout_constraintTop_toBottomOf="@id/measurement_board"
        app:layout_constraintEnd_toStartOf="@id/image_dinamic"
        android:text="3.57"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/image_dinamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_measurement"
        app:layout_constraintBottom_toBottomOf="@id/measurement_testo"
        android:src="@drawable/ic_arrow_up"/>

</androidx.constraintlayout.widget.ConstraintLayout>
