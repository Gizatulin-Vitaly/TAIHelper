<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.reftgres.taihelper.ui.converter.ConverterViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg">

            <!-- Карточка для блока изменения напряжения -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/change_voltage_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/primary_amethyst_dark"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Заголовок "Показания датчика" -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_tittle_first"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Показания датчика"
                        android:gravity="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/card_05" />

                    <!-- Карточка 0-5 mA с улучшенным дизайном -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_05"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/primary_amethyst"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/primary_amethyst_light"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_tittle_first">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_0_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0 - 5\nmA"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/surface_white" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Поле ввода для начала шкалы с уменьшенной высотой и иконкой -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        app:hintTextColor="@color/primary_amethyst"
                        app:boxStrokeColor="@color/primary_amethyst"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/primary_amethyst"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toTopOf="@id/card_05"
                        app:layout_constraintStart_toEndOf="@id/card_05"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/card_05">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/start_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="Начало шкалы датчика"
                            android:inputType="numberDecimal"
                            android:background="@drawable/rounded_edit_text_bg" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Карточка 4-20 mA с улучшенным дизайном -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_420"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/text_secondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card_05">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_4_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="4 - 20\nmA"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Поле ввода для конца шкалы с уменьшенной высотой и иконкой -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_finish"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        app:hintTextColor="@color/primary_amethyst"
                        app:boxStrokeColor="@color/primary_amethyst"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/primary_amethyst"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toTopOf="@id/card_420"
                        app:layout_constraintStart_toEndOf="@id/card_420"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/card_420">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/finish_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edit_text_bg"
                            android:hint="Конец шкалы датчика"
                            android:inputType="numberDecimal"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Заголовок "Пользовательские данные" -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_tittle_second"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Пользовательские данные"
                        android:gravity="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/card_420"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Поле ввода пользовательских данных с иконкой (будет меняться) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_users"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:hint="Введите значение измерений"
                        app:hintTextColor="@color/primary_amethyst"
                        app:boxStrokeColor="@color/primary_amethyst"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/primary_amethyst"
                        app:startIconDrawable="@drawable/ic_sensors"
                        app:startIconTint="@color/primary_amethyst"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toBottomOf="@id/text_tittle_second"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/user_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:paddingVertical="16dp"
                            android:paddingStart="48dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Заголовок раздела перенесен в верхнюю часть -->
            <TextView
                android:id="@+id/word_scale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="Что необходимо найти"
                android:textColor="@color/surface_white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:background="@drawable/rounded_title_bg"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/change_voltage_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Группа переключателей режима под заголовком -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:checkedButton="@id/btn_current"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/word_scale"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_current"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Токовые"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_bolt"
                    app:iconSize="28dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="16dp"
                    app:rippleColor="?attr/colorPrimaryVariant"
                    app:strokeColor="?attr/colorPrimary"
                    app:backgroundTint="@color/primary_amethyst_dark"
                    app:iconTint="@color/surface_white"
                    android:textColor="@color/surface_white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sensor"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Датчик "
                    android:textSize="20sp"
                    app:icon="@drawable/ic_current"
                    app:iconSize="28dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="16dp"
                    app:rippleColor="?attr/colorPrimaryVariant"
                    app:strokeColor="?attr/colorPrimary" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Карточка для отображения результата -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/result_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeColor="@color/primary_amethyst"
                app:strokeWidth="2dp"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/mode_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/resultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ТАИ"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:textSize="48sp"
                    android:textColor="@color/primary_amethyst_dark"
                    android:letterSpacing="0.05"
                    tools:text="ТАИ" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопка расчета с эффектами -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resultButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:text="Рассчитать"
                android:textSize="20sp"
                android:backgroundTint="@color/primary_amethyst_dark"
                android:textColor="@color/surface_white"
                app:cornerRadius="20dp"
                app:elevation="8dp"
                app:rippleColor="@color/primary_amethyst_light"
                android:stateListAnimator="@animator/button_state_list_anim"
                app:icon="@drawable/ic_calculator"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/result_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>