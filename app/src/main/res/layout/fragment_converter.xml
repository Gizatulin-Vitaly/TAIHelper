<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.reftgres.taihelper.ui.converter.ConverterViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg">

            <!-- Карточка для блока изменения напряжения -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/change_voltage_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <!-- Заголовок "Показания датчика" -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_tittle_first"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/display_sensor"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.01"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/card_05" />

                    <!-- Карточка 0-5 mA с улучшенным дизайном -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_05"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="16dp"
                        app:cardBackgroundColor="@color/surface"
                        app:strokeColor="@color/divider"
                        app:strokeWidth="0.8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_tittle_first">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_0_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/_0_5_nma"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:letterSpacing="0.01"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Поле ввода для начала шкалы с уменьшенной высотой и иконкой -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_start"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        app:boxBackgroundColor="@color/input_background"
                        app:hintTextColor="@color/text_hint"
                        app:boxStrokeColor="@color/primary"
                        app:endIconTint="@color/primary"
                        android:textCursorDrawable="@color/text_primary"
                        android:layout_marginEnd="16dp"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toTopOf="@id/card_05"
                        app:layout_constraintStart_toEndOf="@id/card_05"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/card_05">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/start_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/start_scale_sensor"
                            android:inputType="numberDecimal"
                            android:background="@drawable/rounded_edit_text_bg" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Карточка 4-20 mA с улучшенным дизайном -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_420"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/primary"
                        app:strokeColor="@color/divider"
                        android:layout_marginStart="16dp"
                        app:strokeWidth="0.8dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card_05">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_4_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/_4_20_nma"
                            android:letterSpacing="0.01"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_on_primary" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Поле ввода для конца шкалы с уменьшенной высотой и иконкой -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_finish"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        app:boxBackgroundColor="@color/input_background"
                        android:textColor="@color/text_primary"
                        app:hintTextColor="@color/text_hint"
                        android:layout_marginEnd="16dp"
                        android:textCursorDrawable="@color/text_primary"
                        app:boxStrokeColor="@color/primary"
                        app:endIconTint="@color/primary"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toTopOf="@id/card_420"
                        app:layout_constraintStart_toEndOf="@id/card_420"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/card_420">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/finish_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edit_text_bg"
                            android:hint="@string/end_scale_sensor"
                            android:inputType="numberDecimal"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Заголовок "Пользовательские данные" -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_tittle_second"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/users_data"
                        android:gravity="center"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:letterSpacing="0.01"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/card_420"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Поле ввода пользовательских данных с иконкой (будет меняться) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/enter_users"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:hint="@string/enter_user_scale"
                        app:boxBackgroundColor="@color/input_background"
                        app:hintTextColor="@color/text_hint"
                        app:boxStrokeColor="@color/primary"
                        app:endIconTint="@color/primary"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_sensors"
                        android:textCursorDrawable="@color/text_primary"
                        app:startIconTint="@color/primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                        app:layout_constraintTop_toBottomOf="@id/text_tittle_second"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/user_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:paddingVertical="16dp"
                            android:paddingStart="48dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/word_scale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="@string/what_do_find"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:letterSpacing="0.01"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/change_voltage_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/mode_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:checkedButton="@id/btn_current"
                app:singleSelection="true"
                android:layout_marginHorizontal="24dp"
                app:selectionRequired="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/word_scale"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_current"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/electrics"
                    android:textSize="20sp"

                    app:icon="@drawable/ic_bolt"
                    app:iconSize="28dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="20dp"
                    android:elevation="4dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/text_on_primary"
                    app:iconTint="@color/text_on_primary"
                    app:rippleColor="@color/primary_light"
                    app:strokeColor="@android:color/transparent"
                    android:layout_marginBottom="8dp"
                    app:strokeWidth="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sensor"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/sensor"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    app:backgroundTint="@color/surface"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_current"
                    app:iconPadding="8dp"
                    app:iconSize="28dp"
                    app:iconTint="@color/text_primary"
                    app:rippleColor="@color/primary_light"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="0dp" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Карточка для отображения результата -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/result_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0.8dp"
                android:alpha="0.9"
                app:layout_constraintTop_toBottomOf="@id/mode_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/resultButton">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/resultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ТАИ"
                    android:letterSpacing="0.01"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:textColor="@color/text_primary"
                    tools:text="ТАИ" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопка расчета с эффектами -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resultButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/mathematical"
                app:cornerRadius="20dp"
                android:textSize="20sp"
                app:backgroundTint="@color/primary"
                android:textColor="@color/text_on_primary"
                app:iconTint="@color/text_on_primary"
                app:elevation="8dp"
                app:rippleColor="@color/primary_light"
                android:stateListAnimator="@animator/button_state_list_anim"
                app:icon="@drawable/ic_calculator"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/result_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>