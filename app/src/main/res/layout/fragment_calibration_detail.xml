<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <!-- Заголовок -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Детали калибровки"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/detail_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:text="Позиция: —" />

                <TextView
                    android:id="@+id/detail_serial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:text="Серийный №: —" />

                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:text="Дата: —" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Лабораторные значения -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Лабораторные значения"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detail_lab_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/detail_lab_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Среднее: —"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Проверка -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Поверяемый датчик"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detail_test_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/detail_test_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Среднее: —"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Дополнительные -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доп. данные"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detail_resistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сопротивление: —"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/detail_constant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Константа: —"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/detail_r_series"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R-серии: —"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
