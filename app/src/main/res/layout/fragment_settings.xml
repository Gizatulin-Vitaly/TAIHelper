<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Заголовок страницы -->
    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки приложения"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка для настроек темы -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardThemeSettings"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/primary_amethyst"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок секции тем -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_theme"
                    app:tint="@color/primary_amethyst" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оформление"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginTop="12dp" />

            <!-- ВАЖНО: стандартная RadioGroup БЕЗ вложенных контейнеров -->
            <RadioGroup
                android:id="@+id/radioGroupTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Вариант 1: Светлая тема -->
                <!-- ВАЖНО: чистая RadioButton с drawableStart для иконки -->
                <RadioButton
                    android:id="@+id/radioLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Светлая тема"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary_amethyst"
                    android:drawableStart="@drawable/ic_light_mode"
                    android:drawableTint="@color/primary_amethyst"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

                <!-- Вариант 2: Темная тема -->
                <RadioButton
                    android:id="@+id/radioDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Темная тема"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary_amethyst"
                    android:drawableStart="@drawable/ic_dark_mode"
                    android:drawableTint="@color/primary_amethyst"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

                <!-- Вариант 3: Системная тема -->
                <RadioButton
                    android:id="@+id/radioSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Системная тема"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary_amethyst"
                    android:drawableStart="@drawable/ic_system_mode"
                    android:drawableTint="@color/primary_amethyst"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />
            </RadioGroup>

            <!-- Описание текущей темы -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите предпочитаемую тему оформления приложения или используйте системные настройки вашего устройства."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="16dp"
                android:alpha="0.8" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

