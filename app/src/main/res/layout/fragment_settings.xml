<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Заголовок страницы -->
    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_app"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:letterSpacing="0.01"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка для настроек темы -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardThemeSettings"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/divider"
        app:cardBackgroundColor="@color/surface"
        app:strokeWidth="0.8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок секции тем -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_theme"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/themes"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="12dp" />

            <RadioGroup
                android:id="@+id/radioGroupTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <RadioButton
                    android:id="@+id/radioLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/light_themes"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary"
                    android:letterSpacing="0.01"
                    android:drawableStart="@drawable/ic_light_mode"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:drawableEnd="@drawable/radio_selector" />

                <!-- Вариант 2: Темная тема -->
                <RadioButton
                    android:id="@+id/radioDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_themes"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary"
                    android:drawableStart="@drawable/ic_dark_mode"
                    android:drawablePadding="16dp"
                    android:letterSpacing="0.01"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:drawableEnd="@drawable/radio_selector" />

                <!-- Вариант 3: Системная тема -->
                <RadioButton
                    android:id="@+id/radioSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_themes"
                    android:textSize="16sp"
                    android:button="@null"
                    android:buttonTint="@color/primary"
                    android:drawableStart="@drawable/ic_system_mode"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:letterSpacing="0.01"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:drawableEnd="@drawable/radio_selector" />
            </RadioGroup>

            <!-- Описание текущей темы -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/chose_your_themes"
                android:textSize="14sp"
                android:letterSpacing="0.01"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="16dp"
                android:alpha="0.8" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLanguageSettings"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/divider"
        app:cardBackgroundColor="@color/surface"
        app:strokeWidth="0.8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardThemeSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок секции языков -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_language"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:letterSpacing="0.01"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="12dp" />

            <!-- RadioGroup без вложенных контейнеров -->
            <RadioGroup
                android:id="@+id/radioGroupLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radioRussian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="@color/primary"
                    android:drawableStart="@drawable/ic_flag_russia"
                    android:drawableEnd="@drawable/radio_selector"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:paddingVertical="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:text="@string/russian"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textSize="16sp"
                    android:letterSpacing="0.01"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:buttonTint="@color/primary"
                    android:drawableStart="@drawable/ic_flag_uk"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:drawableEnd="@drawable/radio_selector" />

                <RadioButton
                    android:id="@+id/radioAlbanian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alban"
                    android:textSize="16sp"
                    android:button="@null"
                    android:letterSpacing="0.01"
                    android:fontFamily="@font/roboto_regular"
                    android:buttonTint="@color/primary"
                    android:drawableStart="@drawable/ic_flag_albania"
                    android:drawablePadding="16dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:drawableEnd="@drawable/radio_selector" />
            </RadioGroup>

            <!-- Описание выбора языка -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chose_your_language"
                android:textSize="14sp"
                android:letterSpacing="0.01"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:alpha="0.8" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>