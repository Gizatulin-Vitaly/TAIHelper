<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Заголовок "Показания датчика" -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_tittle_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Показания датчика"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_05"
            tools:text="Показания датчика" />

        <!-- Карточка 0-5 mA с улучшенным дизайном -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_05"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/primary_amethyst"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_amethyst_light"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_tittle_first">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_0_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0 - 5\nmA"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/surface_white" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Поле ввода для начала шкалы с улучшенным дизайном -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_start"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            app:hintTextColor="@color/primary_amethyst"
            app:boxStrokeColor="@color/primary_amethyst"
            app:endIconMode="clear_text"
            app:endIconTint="@color/primary_amethyst"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
            app:layout_constraintTop_toTopOf="@id/card_05"
            app:layout_constraintStart_toEndOf="@id/card_05"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/start_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Начало шкалы датчика"
                android:inputType="numberDecimal"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_edit_text_bg" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Карточка 4-20 mA с улучшенным дизайном -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_420"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/background_light"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/text_secondary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_05">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_4_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4 - 20\nmA"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Поле ввода для конца шкалы с улучшенным дизайном -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_finish"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            app:hintTextColor="@color/primary_amethyst"
            app:boxStrokeColor="@color/primary_amethyst"
            app:endIconMode="clear_text"
            app:endIconTint="@color/primary_amethyst"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
            app:layout_constraintTop_toTopOf="@id/card_420"
            app:layout_constraintStart_toEndOf="@id/card_420"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/finish_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Конец шкалы датчика"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_edit_text_bg" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Заголовок "Пользовательские данные" -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_tittle_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Пользовательские данные"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toBottomOf="@id/card_420"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/enter_users" />

        <!-- Поле ввода пользовательских данных с улучшенным дизайном -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_users"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:hint="Введите Ваше значение"
            app:hintTextColor="@color/primary_amethyst"
            app:boxStrokeColor="@color/primary_amethyst"
            app:endIconMode="clear_text"
            app:endIconTint="@color/primary_amethyst"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/text_tittle_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/rounded_edit_text_bg" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>