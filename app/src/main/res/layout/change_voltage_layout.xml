<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="@color/primary_amethyst_dark"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Заголовок "Показания датчика" -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_tittle_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Показания датчика"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card_05"
                tools:text="Показания датчика" />

            <!-- Карточка 0-5 mA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_05"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_amethyst"
                android:elevation="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_tittle_first">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_0_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0 - 5  mA"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/surface_white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Поле ввода для начала шкалы -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_start"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                app:layout_constraintTop_toTopOf="@id/card_05"
                app:layout_constraintStart_toEndOf="@id/card_05"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/start_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Начало шкалы датчика"
                    android:inputType="numberDecimal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/rounded_edit_text_bg" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Карточка 4-20 mA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_420"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/background_light"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_05">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_4_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4 - 20 mA"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Поле ввода для конца шкалы -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_finish"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                app:layout_constraintTop_toTopOf="@id/card_420"
                app:layout_constraintStart_toEndOf="@id/card_420"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/finish_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Конец шкалы датчика"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/rounded_edit_text_bg" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Заголовок "Пользовательские данные" -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_tittle_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Пользовательские данные"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/card_420"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/enter_users" />

            <!-- Поле ввода пользовательских данных -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_users"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:hint="Введите Ваше значение"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:shapeAppearanceOverlay="@style/RoundedTextInputLayout"
                app:layout_constraintTop_toBottomOf="@id/text_tittle_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/rounded_edit_text_bg" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>