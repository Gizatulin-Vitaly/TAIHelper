<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="@color/primary_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_tittle_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Показания датчика"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card_05"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_05"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_blue"
                android:elevation="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_tittle_first">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_0_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0 - 5  mA"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/surface_white"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_start"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:inputType="numberDecimal"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/card_05"
                app:layout_constraintStart_toEndOf="@id/card_05"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/start_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Начало шкалы датчика"
                    android:inputType="numberDecimal"
                    android:background="@color/background_light"
                    app:boxStrokeColor="@color/text_secondary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_420"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/background_light"
                android:elevation="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_05">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_4_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4 - 20 mA"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_finish"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                app:hintAnimationEnabled="true"
                app:layout_constraintTop_toTopOf="@id/card_420"
                app:layout_constraintStart_toEndOf="@id/card_420"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/finish_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Конец шкалы датчика"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:background="@color/background_light"
                    app:boxStrokeColor="@color/text_secondary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_tittle_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пользовательские данные"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:paddingVertical="16dp"
                android:paddingHorizontal="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/card_420"
                app:layout_constraintBottom_toTopOf="@id/enter_users" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_users"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="Введите Ваше значение"
                app:hintTextColor="@color/text_secondary"
                app:boxStrokeColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/text_tittle_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_light"
                    app:boxStrokeColor="@color/text_secondary"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
