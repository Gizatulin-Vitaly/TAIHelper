<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.reftgres.taihelper.ui.oxygen.OxygenMeasurementViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="40dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:context="com.reftgres.taihelper.ui.oxygen.OxygenMeasurementFragment">

            <!-- Блок выбора блока и позиции -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_block_title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/number_block"
                app:layout_constraintEnd_toStartOf="@id/tv_sensor_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/block_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@id/sensor_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_block_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_sensor_title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/add_position"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_block_title"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/sensor_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/block_spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_sensor_title" />

            <!-- Информация о датчике -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sensor_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/block_spinner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_info_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_about_sensors"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_position_sensor_title"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/position_sensor_simple"
                        app:layout_constraintEnd_toStartOf="@id/tv_position_sensor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_position_sensor"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_position_sensor_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_position_sensor_title"
                        tools:text="Позиция 1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_number_sensor_title"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/number"
                        app:layout_constraintEnd_toStartOf="@id/tv_number_sensor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_position_sensor_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_number_sensor"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_number_sensor_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_number_sensor_title"
                        tools:text="12345" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_middle_sensor_title"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/middle_scale_simple"
                        app:layout_constraintEnd_toStartOf="@id/tv_middle_sensor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_number_sensor_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_middle_sensor"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_middle_sensor_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_middle_sensor_title"
                        tools:text="9.45" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_analog_output_title"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/electric_output_simple"
                        app:layout_constraintEnd_toStartOf="@id/tv_analog_output"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_middle_sensor_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_analog_output"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_analog_output_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_analog_output_title"
                        tools:text="4-20 мА" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Блок показаний всех датчиков -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_all_oxygen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_sensor_info">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Верхний ряд датчиков -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_fourth_sensor_title"
                        style="@style/TextAppearance.Material3.TitleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@string/fourth_sensor"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_second_sensor_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_fourth_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tv_fourth_sensor_title"
                        app:layout_constraintStart_toStartOf="@id/tv_fourth_sensor_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_fourth_sensor_title">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_fourth_indicate"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="3.54" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_fourth_middle"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_fourth_indicate"
                            app:layout_constraintStart_toEndOf="@id/tv_fourth_indicate"
                            tools:text="(9.89)" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_second_sensor_title"
                        style="@style/TextAppearance.Material3.TitleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="@string/second_sensor"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_fourth_sensor_title"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_second_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tv_second_sensor_title"
                        app:layout_constraintStart_toStartOf="@id/tv_second_sensor_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_second_sensor_title">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_second_indicate"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="3.54" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_second_middle"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_second_indicate"
                            app:layout_constraintStart_toEndOf="@id/tv_second_indicate"
                            tools:text="(9.89)" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Дата измерения -->
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        app:layout_constraintTop_toBottomOf="@id/container_fourth_reading" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_date_control"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        tools:text="23.02.2025" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_control" />

                    <!-- Нижний ряд датчиков -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_third_sensor_title"
                        style="@style/TextAppearance.Material3.TitleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@string/third_sensor"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_first_sensor_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_third_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tv_third_sensor_title"
                        app:layout_constraintStart_toStartOf="@id/tv_third_sensor_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_third_sensor_title">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_third_indicate"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="3.54" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_third_middle"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_third_indicate"
                            app:layout_constraintStart_toEndOf="@id/tv_third_indicate"
                            tools:text="(9.89)" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_first_sensor_title"
                        style="@style/TextAppearance.Material3.TitleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="@string/first_sensor"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_third_sensor_title"
                        app:layout_constraintTop_toBottomOf="@id/divider2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_first_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/tv_first_sensor_title"
                        app:layout_constraintStart_toStartOf="@id/tv_first_sensor_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_first_sensor_title">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_first_indicate"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="3.54" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_first_middle"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_first_indicate"
                            app:layout_constraintStart_toEndOf="@id/tv_first_indicate"
                            tools:text="(9.89)" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- История измерений -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_all_oxygen">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_history_title"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/latest_5_meashuremets"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/last_measurements" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>