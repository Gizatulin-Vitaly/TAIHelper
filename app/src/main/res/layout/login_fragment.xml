<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Карточка для элементов формы с закругленными углами и тенью -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:background="?attr/colorSurface"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/divider"
            app:cardBackgroundColor="@color/surface"
            app:strokeWidth="0.8dp"
            android:alpha="0.85"
            android:animateLayoutChanges="true"
            android:transitionName="cardFormTransition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Логотип приложения с анимацией появления -->
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/app_logo_description"
                    android:elevation="4dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:transitionName="logo_transition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Заголовок "Добро пожаловать" -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/welcome_text"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivLogo" />

                <!-- Подзаголовок -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/login_subtitle"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/text_secondary"
                    android:letterSpacing="0.01"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

                <!-- Поле Email с иконкой -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/email_hint"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusTopStart="16dp"
                    app:hintTextColor="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:endIconTint="@color/primary"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="clear_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingVertical="12dp"
                        android:letterSpacing="0.01"
                        android:paddingStart="48dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Поле Password с иконкой -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/password_hint"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="password_toggle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilEmail"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/primary"
                    app:boxBackgroundColor="@color/input_background"
                    app:hintTextColor="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:endIconTint="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.01"
                        android:paddingVertical="12dp"
                        android:paddingStart="48dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Кнопка "Забыли пароль?" рядом с полем пароля -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:text="@string/forgot_password"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:letterSpacing="0.01"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilPassword" />

                <!-- Кнопка Login с градиентным фоном -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"
                    android:text="@string/login_button"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="20dp"
                    android:textColor="@color/text_on_primary"
                    app:iconTint="@color/text_on_primary"
                    app:rippleColor="@color/primary_light"
                    android:letterSpacing="0.01"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

                <!-- Разделительная линия с текстом "или" -->
                <LinearLayout
                    android:id="@+id/dividerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/btnLogin">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingHorizontal="16dp"
                        android:text="@string/or_text"
                        android:letterSpacing="0.01"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider" />
                </LinearLayout>

                <!-- Контейнер для текста "Нет аккаунта?" и кнопки регистрации -->
                <LinearLayout
                    android:id="@+id/registrationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dividerLayout">

                    <!-- Текст "Нет аккаунта?" -->
                    <TextView
                        android:id="@+id/tvNoAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/no_account"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <!-- Кнопка Register как текстовая ссылка -->
                    <TextView
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_button"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.01"
                        android:textColor="@color/primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>