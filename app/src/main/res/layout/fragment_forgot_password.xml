<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Карточка для элементов формы с закругленными углами и тенью -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardForm"
        android:background="?attr/colorSurface"
        android:alpha="0.85"
        android:animateLayoutChanges="true"
        android:transitionName="cardFormTransition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"

        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/divider"
        app:cardBackgroundColor="@color/surface"
        app:strokeWidth="0.8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Заголовок "Восстановление пароля" -->
            <TextView
                android:id="@+id/tvResetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/reset_password_title"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Подзаголовок с инструкцией -->
            <TextView
                android:id="@+id/tvResetSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/reset_password_subtitle"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:textSize="14sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvResetTitle" />

            <!-- Иконка сброса пароля -->
            <ImageView
                android:id="@+id/ivResetPassword"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/reset_password_icon_description"
                android:src="@drawable/ic_reset_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvResetSubtitle"
                app:tint="@color/primary"
                android:alpha="0.8" />

            <!-- Поле Email с иконкой -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/email_hint"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/input_background"
                android:textCursorDrawable="@color/text_primary"
                app:hintTextColor="@color/text_hint"
                app:boxStrokeColor="@color/primary"
                app:endIconTint="@color/primary"
                app:endIconMode="clear_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivResetPassword"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:paddingVertical="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:paddingStart="48dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Кнопка Сбросить пароль с градиентным фоном -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                android:text="@string/reset_password_button"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                app:backgroundTint="@color/primary"
                android:textColor="@color/text_on_primary"
                app:iconTint="@color/text_on_primary"
                app:rippleColor="@color/primary_light"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilEmail" />

            <!-- Кнопка Назад в стиле текстовой ссылки -->
            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="@string/back_button"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnResetPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Индикатор загрузки -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@color/primary"
        android:elevation="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>