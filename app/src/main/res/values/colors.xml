<resources>
    <!-- Основные цвета -->
    <color name="primary_amethyst">#7F4B8B</color> <!-- Основной аметистовый цвет -->
    <color name="primary_dark_amethyst">#5A3A6B</color> <!-- Темный аметист -->
    <color name="secondary_lavender">#D1A6D9</color> <!-- Лаванда для акцентов -->
    <color name="accent_light_silver">#B8A9C9</color> <!-- Светлый серебристо-сиреневый -->

    <!-- Текст -->
    <color name="text_primary">#333333</color> <!-- Основной текст -->
    <color name="text_secondary">#6B6B6B</color> <!-- Второстепенный текст -->
    <color name="text_tertiary">#999999</color> <!-- Третичный текст для подсказок -->
    <color name="text_on_dark">#FFFFFF</color> <!-- Белый текст на темных фонах -->

    <!-- Фоны -->
    <color name="background_light">#F5E6F7</color> <!-- Легкий фиолетовый фон -->
    <color name="surface_white">#FFFFFF</color> <!-- Белый для поверхностей -->
    <color name="divider_gray">#D1D1D1</color> <!-- Легкий серый для разделителей -->

    <!-- Кнопки и интерактивные элементы -->
    <color name="button_primary">@color/primary_amethyst</color> <!-- Цвет для кнопок -->
    <color name="button_primary_pressed">@color/primary_dark_amethyst</color> <!-- Цвет кнопки при нажатии -->
    <color name="button_secondary">#D3C4E6</color> <!-- Лавандовая для вторичных кнопок -->
    <color name="button_stroke">@color/primary_amethyst</color> <!-- Граница для кнопок -->

    <!-- Поля ввода -->
    <color name="input_background">@color/surface_white</color> <!-- Белый фон для полей ввода -->
    <color name="input_text">@color/text_primary</color> <!-- Текст в полях ввода -->
    <color name="input_border">@color/primary_amethyst</color> <!-- Цвет рамки поля ввода -->
    <color name="input_hint">@color/text_tertiary</color> <!-- Цвет подсказок в полях ввода -->

    <!-- Системные -->
    <color name="success_green">#43A047</color> <!-- Зеленый для успеха -->
    <color name="error_red">#E53935</color> <!-- Красный для ошибок -->
    <color name="warning_orange">#FFA000</color> <!-- Оранжевый для предупреждений -->

    <!-- Градиенты -->
    <color name="gradient_start">#7F4B8B</color> <!-- Начало градиента (аметиствый) -->
    <color name="gradient_end">#D1A6D9</color> <!-- Конец градиента (лавандовый) -->
</resources>
