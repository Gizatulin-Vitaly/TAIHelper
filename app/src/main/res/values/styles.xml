<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для скругленных полей ввода -->
    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CustomOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <!-- Используем собственную иконку -->
        <item name="android:src">@drawable/ic_menu_custom</item>

        <!-- Тонирование иконки - исправлено название цвета -->
        <item name="tint">@color/divider</item>

        <!-- Опционально: изменение размера -->
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

</resources>

