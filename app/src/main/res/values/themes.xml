<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TAIHelper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/neon_indigo</item>
        <item name="colorPrimaryVariant">@color/dark_ultramarine</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/neon_turquoise</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/graphite_gray</item>
        <item name="colorSurface">@color/dark_metallic</item>
        <item name="colorOnBackground">@color/light_gray</item>
        <item name="colorOnSurface">@color/light_gray</item>
    </style>

    <style name="Theme.TAIHelper.PopupOverlay" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>
</resources>