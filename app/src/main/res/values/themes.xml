<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TAIHelper" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_bg</item>
        <item name="android:windowEnterTransition">@transition/slide</item>
        <item name="android:windowExitTransition">@transition/fade</item>

        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_amethyst</item>
        <item name="colorOnPrimary">@color/text_on_dark</item>

        <!-- Secondary colors -->
        <item name="colorOnSecondary">@color/text_on_dark</item>

        <!-- Background -->
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Surface -->
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Текст -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Статус бар -->
        <item name="android:navigationBarColor">@color/primary_amethyst</item>

        <!-- Кнопки -->
        <item name="materialButtonStyle">@style/Widget.Button.Primary</item>
        <item name="buttonStyle">@style/Widget.Button.Primary</item>

        <!-- Поля ввода -->
        <item name="textInputStyle">@style/Widget.InputLayout</item>

        <item name="actionOverflowButtonStyle">@style/CustomOverflowButtonStyle</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="hoveredFocusedTranslationZ">4dp</item>
    </style>

    <!-- Стиль для полей ввода -->
    <style name="Widget.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="hintTextColor">@color/input_hint</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Theme.YourAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- ... Другие атрибуты ... -->

        <item name="actionOverflowButtonStyle">@style/CustomOverflowButtonStyle</item>
        <item name="popupMenuStyle">@style/AppTheme.PopupMenu</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>


</resources>
